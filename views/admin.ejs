<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/_head %>
  </head>

<body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
  <header id="header">
    <h1><strong><a href="/">Pole</strong>Place</a></h1>
    <nav id="nav">
      <form action="/create">
      <button type="submit" class="btn btn-info">New Poll</button>
      </form>
    </nav>
  </header>

  <section id="main" class="wrapper">
  <div class="container">
  <header class="major special">
    <h2>Results for <i>"<%= votes[0].polldescription %>"</i> </h2>
  </header>

  <section class="stats">
    <h3>Stats:</h3>
    <p><% var result = votes.reduce(function(acc, v) { %>
    <% acc[v.title] = (acc[v.title] || 0) + v.points %>
    <% return acc %>
    <% }, {}) %>
    <% console.log(result) %>

    <ul style="list-style-type:circle">
    <% for (let obj in votesTotals) { %>
    <li>"<%= obj %>" received <%= votesTotals[obj] %> points.</li>
    <% } %>
    <p>
  <hr />
  </ul>
  <p>
  <canvas id="myChart" width="400" height="400"></canvas>
  <script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'pie',

    // The data for our dataset
    data: {
        labels: ["January", "February", "March", "April", "May", "June", "July"],
        datasets: [{
            label: "My First dataset",
            backgroundColor: 'rgb(255, 99, 132)',
            borderColor: 'rgb(255, 99, 132)',
            data: [0, 10, 5, 2, 20, 30, 45],
        }]
    },

    // Configuration options go here
    options: {}
    });
  </script>
</section>

  <p><form id="deletePoll" action="/polls/:id/delete" method="POST">
  <button type="submit" class="btn btn-danger">Delete Poll</button>
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script type="text/javascript" src="/vendor/jquery.sortable.js"></script>
</body>
</html>
